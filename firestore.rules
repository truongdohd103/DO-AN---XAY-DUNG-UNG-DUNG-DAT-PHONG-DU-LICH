rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // DEVELOPMENT MODE - Allow all reads for testing
    // TODO: Remove this in production and use proper authentication
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if true; // Temporarily allow all for development
      allow create: if true; // Temporarily allow all for development
    }
    
    // Hotels collection - public read/write for development
    match /hotels/{hotelId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Rooms collection - public read/write for development
    match /rooms/{roomId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Bookings collection - allow all for development
    match /bookings/{bookingId} {
      allow read, write: if true; // Temporarily allow all for development
      allow create: if true; // Temporarily allow all for development
    }
    
    // Reviews collection - allow all for development
    match /reviews/{reviewId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Bookmarks collection - allow all for development
    match /bookmarks/{bookmarkId} {
      allow read, write, delete: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Vouchers collection - allow all for development
    match /vouchers/{voucherId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // VOUCHER_CLAIMS collection - NEW: Allow all for development (fix PERMISSION_DENIED)
    match /voucher_claims/{claimId} {
      allow read, write: if true; // Temporarily allow all for development
      allow create: if true; // Allow all for development
      allow delete: if true; // If needed for unclaim
    }
    
    // Notifications collection - allow all for development
    match /notifications/{notificationId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Bills collection - allow all for development
    match /bills/{billId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Payments collection - allow all for development
    match /payments/{paymentId} {
      allow read, write: if true; // Allow all for development
      allow create: if true; // Allow all for development
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // TODO: PRODUCTION RULES (uncomment when ready)
    /*
    // For voucher_claims in prod: Users can only read/write their own claims
    match /voucher_claims/{claimId} {
      allow read: if request.auth != null && isOwner(resource.data.userId);  // Read own claims
      allow create: if request.auth != null && isOwner(request.resource.data.userId);  // Create own
      allow update, delete: if false;  // No update/delete for security (or add logic)
    }
    
    // Similar for other collections: Replace 'if true' with auth checks
    match /users/{userId} {
      allow read, write: if request.auth != null && isOwner(userId);
    }
    // ... (apply to hotels: read if authenticated; bookings: owner only, etc.)
    */
  }
}